{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Next.js: debug server",
      "command": "npm run dev"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Next.js: debug client",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://*": "${webRoot}/*"
      },
      "preLaunchTask": "wait-for-next-server"
    }
  ],
  "compounds": [
    {
      "name": "Next.js: debug fullstack",
      "configurations": [
        "Next.js: debug server",
        "Next.js: debug client"
      ],
      "stopAll": true
    }
  ]
}